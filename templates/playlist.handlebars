<div class="header">
	{{#if dataKey}}
	<menu class="actions">
		<li><a class="remove"><i class="icon-remove"></i></a></li>
		<li style="display:none">
			<span class="red">{{L 'removePlaylist'}}</span>: {{L 'areYouSure'}} 
			<a class="ok"><i class="icon-ok"></i></a> &nbsp; <a class="cancel"><i class="icon-remove"></i></a>
		</li>
	</menu>
	{{/if}}
	{{inline title dataKey 'title' 'h1'}}
	<hr>
</div>
<div class="half">
	<div class="padding">
		<table></table>
	</div>
</div>
<div class="half">
	<div class="padding border">
		<form>
			<label>{{L 'addSongs'}}</label>
			<div class="controls">
				<input type="text" placeholder="{{L 'searchSongPrompt'}}..." name="query" /> 
				<button class="btn" type="submit">{{L 'search'}}</button>
				<input type="hidden" name="provider" />
			</div>
		</form>
		<menu class="tabs" style="display:none">
			<li class="selected">
				<a>Youtube</a>
			</li>
			<li>
				<a>Soundcloud</a>
			</li>
		</menu>
		<table></table>
	</div>
</div>
