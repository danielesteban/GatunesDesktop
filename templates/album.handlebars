<div class="header">
	<h1 key="{{dataKey}}">
		{{a artist.name artist.link}} - {{title}} 
		{{#unless stored}}
			<button class="btn store"><i class="icon-plus"></i> {{L 'storeAlbum'}}</button>
		{{/unless}}
	</h1>
	<hr>
</div>
<div class="half">
	<div class="padding">
		<table>
			{{#each songs}}
				{{> song}}
			{{/each}}
			{{#empty songs}}
				<tr><td class="empty">{{L 'emptyAlbum'}}</td>
			{{/empty}}
		</table>
		{{#empty songs}}
			<div class="empty" style="display:none">
				<h4>{{L 'moreFrom'}}: {{artist.name}}</h4>
				<div></div>
			</div>
		{{/empty}}
	</div>
</div>
<div class="half">
	<div class="padding">
		<div class="cover"></div>
		<div class="tags">
			{{#each tags}}
				{{a name link}}
			{{/each}}
		</div>
		<div class="similarAlbums"></div>
		{{#if stored}}
			<menu>
				<li><button class="btn btn-mini remove"><i class="icon-remove"></i> {{L 'removeAlbum'}}</button></li>
			</menu>
		{{/if}}
	</div>
</div>
